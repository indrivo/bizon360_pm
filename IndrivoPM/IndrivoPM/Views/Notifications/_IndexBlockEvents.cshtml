@using Bizon360.Models
@using Gear.Notifications.Abstractions.Domain
@using Microsoft.Extensions.Localization
@using Microsoft.Extensions.Options
@inject IStringLocalizer Localizer
@inject IOptionsSnapshot<LocalizationConfigModel> LocalizationConfig
@model Gear.Notifications.Abstractions.Infrastructure.Resources.Dtos.EventDto

@if (Model.EventDescription != null)
{
    <label class="d-inline font-size-14">@Model.EventDescription</label>
}
else
{
    <label class="d-inline font-size-14">@Model.EventName</label>
}

<div class="custom-control custom-switch d-inline float-right">
    <input data-id="@Model.Id"
           data-type="@PropagationType.Email"
           type="checkbox"
           checked="@(Model.PropagationTypes.Contains(PropagationType.Email))"
           class="custom-control-input propagation-type"
           id="email-@Model.GetHashCode()" />

    <label class="custom-control-label" for="email-@Model.GetHashCode()">Email notifications</label>
</div>

<div class="custom-control custom-switch d-inline float-right">
    <input data-id="@Model.Id"
           data-type="@PropagationType.Application"
           type="checkbox"
           checked="@(Model.PropagationTypes.Contains(PropagationType.Application))"
           class="custom-control-input propagation-type"
           id="app-@Model.GetHashCode()" />
    <label class="custom-control-label pr-5" for="app-@Model.GetHashCode()">In-app notifications</label>
</div>

<hr class="hr-description my-2" />